<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<%= form_with model: @book do |f| %>
<label class="book-title">Title</label>
<%= f.text_field :title %>
<label class="book-body">Body</label>
<%= f.text_area :body %>
<div class="box"><%= f.submit 'Create Book' %></div>

<% end %>